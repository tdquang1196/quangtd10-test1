{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "scripts/fb-scheduler/Dockerfile",
        "watchPatterns": [
            "scripts/fb-scheduler/**"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}